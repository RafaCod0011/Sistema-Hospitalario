extends ../layouts/main.pug

block style
  style.
    .main-bg {
      background-image: url('/img/background/administrador.jpg');
    }

block content
  
    h2.text-center.mb-4 Registrar nuevo Usuario
    form(action="/registro/add" method="POST")
      .row.g-3
        // Nombre - Apellido
        .col-md-6
          label(for="nombre") Nombre
          input.form-control#nombre(type="text" name="nombre" placeholder="Nombre" required)
        .col-md-6
          label(for="apellido") Apellido
          input.form-control#apellido(type="text" name="apellido" placeholder="Apellido" required)
          
        // DNI
        .col-md-6
          label(for="dni") DNI
          input.form-control#dni(type="text" name="dni" placeholder="DNI" required)

        // Fecha de Nacimiento - Género
        .col-md-6
          label(for="fechaNacimiento") Fecha de Nacimiento
          input.form-control#fechaNacimiento(type="date" name="fechaNacimiento" required)
        .col-md-6
          label(for="genero") Género
          select.form-select#genero(name="genero" required)
            option(value="" disabled selected) Género
            option(value="masculino") Masculino
            option(value="femenino") Femenino
            option(value="otro") Otro

        // Teléfono - Dirección
        .col-md-6
          label(for="telefono") Teléfono
          input.form-control#telefono(type="tel" name="telefono" placeholder="Teléfono" required)
        .col-md-6
          label(for="direccion") Dirección
          input.form-control#direccion(type="text" name="direccion" placeholder="Dirección" required)

        // Rol - Email
        .col-md-6
          label(for="rol") Rol
          select.form-select#rol(name="rol" onchange="toggleFields()" required)
            option(value="" disabled selected) Rol
            option(value="administrador") Administrador
            option(value="recepcionista") Recepcionista
            option(value="medico") Médico
            option(value="enfermero") Enfermero
        .col-md-6
          label(for="email") Email
          input.form-control#email(type="email" name="email" placeholder="@gmail" required)
        .col-md-6
          label(for="confirmalEmail") Confirmar Email
          input.form-control#confirmalEmail(type="email" name="confirmalEmail" placeholder="@gmail" required)

        // Contraseña - Confirmar Contraseña
        .col-md-6
          label(for="password") Contraseña
          input.form-control#password(type="password" name="password" placeholder="Contraseña" required)
        .col-md-6
          label(for="confirmPassword") Confirmar Contraseña
          input.form-control#confirmPassword(type="password" name="confirmPassword" placeholder="Confirmar Contraseña" required)

        // Botón de Envío
        .col-12.text-center
          button.btn.btn-primary.btn-lg(type="submit") Registrar
          if error
            .alert.alert-danger.mt-3 #{error}
