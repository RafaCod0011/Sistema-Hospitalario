extends ../layouts/main.pug

block style
  style.
    .main-bg {
      background-image: url('/img/background/administrador.jpg');
    }
block content 
    
    h2.text-center.mb-4 Registrar un nuevo Paciente
    form(action="/paciente/add" method="POST")
        .row.g-3
            // Nombre - Apellido
            .col-md-6
                label(for="nombre") Nombre
                input.form-control#nombre(type="text" name="nombre" placeholder="Nombre" required)
            .col-md-6
                label(for="apellido") Apellido
                input.form-control#apellido(type="text" name="apellido" placeholder="Apellido" required)

            // DNI
            .col-md-6
                label(for="dni") DNI
                input.form-control#dni(type="text" name="dni" placeholder="DNI" required)

            // Fecha de Nacimiento - Género
            .col-md-6
                label(for="fechaNacimiento") Fecha de Nacimiento
                input.form-control#fechaNacimiento(type="date" name="fechaNacimiento" required)
            .col-md-6
                label(for="genero") Género
                select.form-select#genero(name="genero" required)
                    option(value="" disabled selected) Género
                    option(value="masculino") Masculino
                    option(value="femenino") Femenino
                    option(value="otro") Otro

            // Teléfono - Dirección - Email
            .col-md-6
                label(for="telefono") Teléfono
                input.form-control#telefono(type="tel" name="telefono" placeholder="Teléfono" required)
            .col-md-6
                label(for="direccion") Dirección
                input.form-control#direccion(type="text" name="direccion" placeholder="Dirección" required)
            .col-md-6
                label(for="email") Email
                input.form-control#email(type="email" name="email" placeholder="@gmail" required)
            
            // Obra Social - Contacto de Emergencia - Sintomas
            .col-md-6
                label(for="obraSocial") Obra Social
                input.form-control#obraSocial(type="text" name="obraSocial" placeholder="Obra Social" required)
            .col-md-6
                label(for="contactoEmergencia") Contacto de Emergencia
                input.form-control#contactoEmergencia(type="text" name="contactoEmergencia" placeholder="Contacto de Emergencia" required)
            .col-md-6 
                label(for="Sintomas") Sintomas
                textarea.form-control#Sintomas(name="Sintomas" rows="3" placeholder="Sintomas" required)
            // Botón de Envío
            .col-12.text-center
              button.btn.btn-primary.btn-lg(type="submit") Registrar
              if error
                .alert.alert-danger.mt-3 #{error}    