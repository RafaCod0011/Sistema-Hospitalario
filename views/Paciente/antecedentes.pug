extends ../layouts/main.pug

block style
  style.
    .main-bg {
      background-image: url('/img/background/administrador.jpg');
    }
block content 
    
    h2.text-center.mb-4 Registrar antecedentes medicos del paciente
    form(action="/antecedentes/add" method="POST")
        .row.g-3
            .col-md-6
                label(for="DNI") DNI
                input.form-control#DNI(type="text" name="DNI" placeholder="DNI" required)
            .col-md-6
                label(for="enfermedadesPrevias") Enfermedades Previas
                textarea.form-control#enfermedadesPrevias(name="enfermedadesPrevias" rows="3" placeholder="Enfermedades Previas" required) 
            .col-md-6 
                label(for="alergias") Alergias
                textarea.form-control#alergias(name="alergias" rows="3" placeholder="Alergias" required)
            .col-md-6
                label(for="medicamentos") Medicamentos
                textarea.form-control#medicamentos(name="medicamentos" rows="3" placeholder="Medicamentos" required)
            .col-md-6
                label(for="cirugias") Cirugías
                textarea.form-control#cirugias(name="cirugias" rows="3" placeholder="Cirugías" required)
            .col-md-6
                label(for="antecedentesFamiliares") Antecedentes Familiares
                textarea.form-control#antecedentesFamiliares(name="antecedentesFamiliares" rows="3" placeholder="Antecedentes Familiares" required)
            .col-md-6
                label(for="observaciones") Observaciones
                textarea.form-control#observaciones(name="observaciones" rows="3" placeholder="Observaciones" required)
            
            // Botón de Envío
            .col-12.text-center
              button.btn.btn-primary.btn-lg(type="submit") Registrar
              if error
                .alert.alert-danger.mt-3 #{error}    